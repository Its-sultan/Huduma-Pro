    <div
      id="mobileMenu"
      class="fixed inset-y-0 right-0 w-64 bg-white shadow-xl z-50 p-4 transform translate-x-full transition-transform duration-300"
    >
      <button
        id="close-menu"
        class="absolute top-4 right-4 text-2xl text-gray-600"
      >
        ×
      </button>
