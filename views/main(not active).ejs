        </div>
      </section>

      <!-- Call to Action -->
      <% if (!user) { %>
      <section class="bg-gray-200 py-16 text-center">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold text-gray-800 mb-4">
