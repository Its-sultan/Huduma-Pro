        <button
          onclick="handleMenuClick('login')"
          class="w-full text-left p-2 hover:bg-blue-50 rounded-lg"
        >
          Ingia
        </button>
        <button
          onclick="handleMenuClick('register')"
          class="w-full text-left p-2 hover:bg-blue-50 rounded-lg"
