    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .profile-header {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            height: 90px;
            position:relative;
        }
        .profile-picture-container {
            margin-top: -80px;
            position: relative;
            z-index: 10;
        }
        .notification-dropdown {
            display: none;
            position: absolute;
            right: 0;
            top: 100%;
            min-width: 300px;
            background: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border-radius: 8px;
            z-index: 1000;
        }
        .skill-chip {
            transition: all 0.3s ease;
        }
        .skill-chip:hover {
            transform: translateY(-2px);
        }
        .edit-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
